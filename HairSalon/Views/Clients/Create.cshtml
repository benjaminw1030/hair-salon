@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<div class="jumbotron">
  <h3>New Client</h3>
</div>

@if (ViewBag.StylistList.Count == 0)
{
  <p>There are no stylists in the system. Please @Html.ActionLink("add", "Create", "Stylists") some before creating new clients.</p>
}
else
{
  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => Model.Name)
    @Html.TextBoxFor(model => Model.Name)
    @Html.LabelFor(model => model.Stylist)
    @Html.DropDownList("StylistId")

    <input type="submit" value="Add Client" />
  }
}

<p>@Html.ActionLink("Client List", "Index")<br>
  @Html.ActionLink("Home", "Index", "Home")</p>