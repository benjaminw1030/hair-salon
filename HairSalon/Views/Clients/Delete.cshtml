@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<div class="jumbotron">
  <h3>Deleting @Model.Name</h3>
</div>


@using (Html.BeginForm())
{
  <p>Are you sure you want to delete this client?</p>
  <input type="submit" value="Delete" class="btn btn-dark" />
}

<p>@Html.ActionLink("Back to Client", "Details", new { id = Model.ClientId })<br>
  @Html.ActionLink("Client List", "Index")<br>
  @Html.ActionLink("Home", "Index", "Home")</p>