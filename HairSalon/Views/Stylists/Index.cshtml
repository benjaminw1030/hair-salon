@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<div class="jumbotron">
  <h3>Stylists</h3>
</div>

@if (Model.Count == 0)
{
  <p>No stylists added yet.</p> 
}

<ul>
  @foreach (Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.Name}", "Details", new {id = stylist.StylistId})</li>
  }
</ul>

<p>@Html.ActionLink("Add stylist", "Create")<br>
@Html.ActionLink("Client List", "Index", "Clients")<br>
@Html.ActionLink("Home", "Index", "Home")</p>