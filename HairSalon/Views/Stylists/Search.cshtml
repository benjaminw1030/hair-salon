@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<div class="jumbotron">
  <h3>Stylist Search</h3>
</div>

@if (Model.Count == 0)
{
  <p>No stylists found.</p>
}
else
{
  <p>Results:</p>
  <ul>
    @foreach (Stylist stylist in Model)
    {
      <li>@Html.ActionLink($"{stylist.Name}", "Details", new {id = stylist.StylistId})</li>
    }
  </ul>
}

<p>@Html.ActionLink("Stylist List", "Index")<br>
  @Html.ActionLink("Client List", "Index", "Clients")<br>
  @Html.ActionLink("Home", "Index", "Home")</p>