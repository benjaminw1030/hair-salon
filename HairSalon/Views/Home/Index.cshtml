@{
  Layout = "_Layout";
}

<div class="jumbotron">
  <h1>Eau Clair's Hair Salon Administration</h1>
</div>

<form action="/Stylists/Search" method="post">
<p>@Html.ActionLink("See Stylists", "Index", "Stylists")</p>
  <div class="row align-items-center">
    <div class="col-md-12 mb-3">
      <input id="stylistName" name="stylistName" class="form-control" placeholder="Search Stylists">
    </div>
  </div>
  <button id="submit type="submit" class="btn btn-dark">Search</button>
</form>  

<form action="/Clients/Search" method="post">
<p>@Html.ActionLink("See Clients", "Index", "Clients")</p>
  <div class="row align-items-center">
    <div class="col-md-12 mb-3">
      <input id="clientName" name="clientName" class="form-control" placeholder="Search Clients">
    </div>
  </div>
  <button id="submit type="submit" class="btn btn-dark">Search</button>
</form>  

<img id="salon-img" src="~/img/salon.jpg" alt="Salon">